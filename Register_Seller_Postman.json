{
  "info": {
    "_postman_id": "register-seller-collection",
    "name": "Register Seller API",
    "description": "API collection for testing seller registration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpassword\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "login"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  var jsonData = pm.response.json();",
              "  pm.environment.set('token', jsonData.token);",
              "  pm.environment.set('user_id', jsonData.user_id);",
              "  console.log('Token saved:', jsonData.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "2. Register as Seller",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"seller@example.com\",\n  \"business_name\": \"My Cool Shop\",\n  \"contact_info\": \"123 Main Street, Bangkok, Thailand\",\n  \"phonenumber\": \"0812345678\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/register/seller",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "register", "seller"]
        }
      },
      "response": []
    },
    {
      "name": "3. Check Seller Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/check-seller-status/{{user_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "check-seller-status", "{{user_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "4. Get Seller Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/seller-info/testuser",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "seller-info", "testuser"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    }
  ]
}
